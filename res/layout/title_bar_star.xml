<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	
	android:background="@drawable/main_title_gradient"
	>
	
	<ImageView android:id="@+id/favorite"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		
		android:paddingLeft="17dp"
   		android:paddingRight="12dp"
   		android:paddingTop="6dp"
		android:paddingBottom="6dp"
   		   		
		android:src="@drawable/star_off"
		/>
		
	<TextView android:id="@+id/title_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		
		android:paddingTop="6dp"
		android:paddingBottom="6dp"
		
		android:textSize="20sp"
		android:textColor="@android:color/white"
		
		android:text="@string/app_name"
		/>
		
	<View
		android:layout_width="1px"
		android:layout_height="fill_parent"
		android:background="@android:color/black"
		/>
	<View
		android:layout_width="1px"
		android:layout_height="fill_parent"
		android:background="@color/main_title_divider"
		/>
	
	<FrameLayout android:id="@+id/share"
  		android:layout_width="48dp"
 		android:layout_height="fill_parent"
 		android:layout_weight="0"
 			
  		android:background="@drawable/main_title_button_gradient"
  		
  		android:clickable="true"
  		android:focusable="true"
  		
  		android:visibility="gone"
  		>
  		
  		<ImageView 
  			android:layout_width="32dp"
 			android:layout_height="32dp"
  			
  			android:layout_gravity="center"
  			
  			android:src="@drawable/share"
  			/>
 			
	</FrameLayout>
	
</LinearLayout>