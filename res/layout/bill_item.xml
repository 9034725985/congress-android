<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	>

	<TextView android:id="@+id/byline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:layout_gravity="left"
		
		android:layout_marginTop="3dp"
		android:layout_marginRight="5dp"
		
		android:textSize="16sp"
		
		android:text="H.Res. 3222 introduced:"
		/>
		
	<TextView android:id="@+id/date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:layout_alignParentRight="true"
		android:layout_alignTop="@id/byline"
		
		android:textSize="16sp"
		
		android:text="Feb 22"
		/>
		
	<TextView android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:layout_below="@id/byline"
		
		android:layout_marginTop="5dp"
		
		android:textSize="16sp"
		android:textColor="#ffffff"
		
		android:text="Title Of The Bill And Such"
		/>
	
	<LinearLayout android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		
		android:visibility="gone"
		android:layout_marginTop="10dp"
		>
		
		<TextView android:id="@+id/match_field"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:textSize="16sp"
			android:textColor="@android:color/white"
			android:text="Matched the text of the bill:"
			/>
		
		<TextView android:id="@+id/highlight_field"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="10dp"
			
			android:textSize="14sp"
			android:text="Some matching text of the bill, it goes on and on, could be quite long in fact, many hundreds of characters, and will likely have to be truncated in some fashion."
			/> 
			
	</LinearLayout>
		
</RelativeLayout>