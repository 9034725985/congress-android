<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/profile_tab"

	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true"
	>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
	
		<TextView android:id="@+id/profile_name"
		
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="15dp"
			
			android:textSize="26sp"
			android:textColor="@android:color/white"
			
			android:text="Sen. Amyzina Klobuchar"
			/>
		
		<LinearLayout android:id="@+id/profile_top"
			android:orientation="horizontal"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			>
	
		  	<ImageView android:id="@+id/profile_picture"
		  	
		  		android:layout_width="100px"
		  		android:layout_height="125px"
		  		android:layout_marginRight="15dp"
		  		android:layout_marginBottom="10dp"
		  		
		  		android:src="@drawable/loading_photo"
		  		/>
		  	
		  	<LinearLayout android:id="@+id/profile_basic"
		  		android:orientation="vertical"
		  		
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		
		  		android:paddingTop="10dp"
		  		android:paddingRight="20dp"
		  		>
	  		
		  		<TextView android:id="@+id/profile_party"
		  		
			  		android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_marginBottom="7dp"
		  			android:layout_gravity="center"
		  			
		  			android:textSize="22sp"
		  			android:textColor="#dddddd"
		  			
		  			android:text="Democrat"
		  			
			  		/>
			  	<TextView android:id="@+id/profile_state"
			  		
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:layout_marginBottom="7dp"
			  		android:layout_gravity="center"
			  		
			  		android:textSize="22sp"
			  		android:textColor="#dddddd"
			  		
			  		android:text="Minnesota"
			  		/>
			  	
			  	<TextView android:id="@+id/profile_domain"
			  		
			  		android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_gravity="center"
		  			
		  			android:textSize="22sp"
		  			android:textColor="#dddddd"
		  			
		  			android:text="Senior Senator"
			  		/>
	  		
	  		</LinearLayout>
	  	
	 	</LinearLayout>
	 	
	 	<LinearLayout android:id="@+id/profile_bottom"
	 		android:orientation="vertical"
	 		
	 		android:layout_width="fill_parent"
	 		android:layout_height="wrap_content"
	 		android:layout_marginTop="30dp"
	 		android:layout_marginLeft="8dp"
	 		>
	 		
	 		<LinearLayout android:id="@+id/profile_phone_row"
	 			android:orientation="horizontal"
	 			
	 			android:layout_width="fill_parent"
	 			android:layout_height="wrap_content"
	 			android:layout_marginBottom="10dp"
	 			>
	 		
	 			<ImageView android:id="@+id/profile_phone_icon"
	 				android:src="@drawable/phone"
	 			
	 				android:layout_width="48dp"
	 				android:layout_height="48dp"
	 				android:layout_marginRight="10dp"
	 				/>
	 			
		 		<TextView 
		  			android:id="@+id/profile_phone"
		  			android:layout_width="wrap_content"
		 			android:layout_height="wrap_content"
		 			android:layout_marginTop="3dp"
		 			 
		  			android:textSize="30sp"
		  			android:textColor="#268bb7"
		  			android:textColorLink="#268bb7"
		  			
		  			android:text="555-555-1212"
		  			/>
	  		</LinearLayout>
	 		
	 		<LinearLayout android:id="@+id/profile_website_row"
	 			android:orientation="horizontal"
	 			
	 			android:layout_width="fill_parent"
	 			android:layout_height="wrap_content"
	 			>
	 		
	 			<ImageView android:id="@+id/profile_website_icon"
	 				android:src="@drawable/web"
	 				
	 				android:layout_width="48dp"
	 				android:layout_height="48dp"
	 				android:layout_marginRight="10dp"
	 				/>
	 				
	 			<TextView android:id="@+id/profile_website"
	 			
		  			android:layout_width="wrap_content"
		 			android:layout_height="wrap_content"
		 			android:layout_marginTop="7dp"
		 			
		 			android:textSize="22sp"
		 			android:textColor="#268bb7"
		  			android:textColorLink="#268bb7"
		 			
		 			android:text="klobuchar.senate.gov"
		  			/>
	  		</LinearLayout>
		  	
		</LinearLayout>
		
	</LinearLayout>
</ScrollView>