<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:padding="10sp"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	
    <LinearLayout android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >
        
	    <TextView android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:layout_gravity="left"
			
			android:textSize="14sp"
			
			android:text="SEP 22"
			/>
	    
	    <include layout="@layout/new_result" />
	    
	</LinearLayout>
	
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:baselineAligned="false"
        >
    
	    <TextView android:id="@+id/news_where"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:textSize="14sp"
			android:textColor="@color/text_grey"
			
			android:text="Example Source"
			/>
	
		<TextView
			android:id="@+id/news_item_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			
			android:textSize="16sp" 
			
			android:text="Title of the News Story"
			/>
			
		<TextView android:id="@+id/news_item_summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			
			android:textSize="14sp"
			android:textColor="@color/text_grey"
			
			android:text="The summary of an article could be quite long and would look daunting unless wrapped and truncated appropriately..."
			/>
	</LinearLayout>
	
</LinearLayout>