<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory android:title="@string/notifications">
          
          <CheckBoxPreference
                        android:title="@string/notify_enable"
                        android:summary="@string/notify_enable_summary"
                        
                        android:key="congress.notify_enabled" 
                        android:defaultValue="false"                        
                        />
                        
          <ListPreference
                        android:title="@string/notify_interval"
                        android:summary="@string/notify_interval_summary"
                        
                        android:key="congress.notify_interval"
                        android:defaultValue="15"
                        
                        android:entries="@array/notify_interval"
                        android:entryValues="@array/notify_interval_values"
                        
                        android:dependency="congress.notify_enabled" />
           
    </PreferenceCategory>
    
</PreferenceScreen>
